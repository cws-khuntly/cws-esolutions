## ihs configuration
typeset -rx IHS_TYPE_IDENTIFIER=IHS
typeset -rx IHS_SERVER_ROOT=/opt/IBMIHS/current
typeset -rx IHS_DB_DIR=/opt/IHSKeystores
typeset -rx IHS_DB_STASH_SUFFIX=.sth
typeset -rx IHS_DB_REQ_SUFFIX=.rdb
typeset -rx IHS_DB_CRT_SUFFIX=.kdb
typeset -rx IHS_KEY_DB_TYPE=kdb
typeset -rx IHS_CONFIG_PATH=${SERVER_ROOT}/conf
typeset -rx IHS_SERVER_CONFIG=wserver.conf
typeset -rx IHS_OWNING_USER=ihsadm
typeset -rx IHS_PROCESS_USER=ihsusr
typeset -rx IHS_OWNING_GROUP=ihsgrp
typeset -rx IHS_INIT_SCRIPT=/etc/init.d/ihssrvrmgr
typeset -rx IHS_WEB_IDENTIFIER=WS
typeset -rx IHS_PID_IDENTIFIER=PidFile

## ihs template
typeset -rx IHS_KEYDB_TEMPLATE=${PLUGIN_CONF_ROOT}/template/IHS/template-key.kdb
typeset -rx IHS_STHDB_TEMPLATE=${PLUGIN_CONF_ROOT}/template/IHS/template-key.sth
typeset -rx IHS_REQDB_TEMPLATE=${PLUGIN_CONF_ROOT}/template/IHS/template-key.rdb
