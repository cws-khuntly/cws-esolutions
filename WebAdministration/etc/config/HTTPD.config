#==============================================================================
# Base configuration, target directories, etc
#==============================================================================
typeset -rx HTTPD_TYPE_IDENTIFIER=HTTPD;
typeset -rx HTTPD_SERVER_ROOT=/opt/Apache/current;
typeset -rx HTTPD_DB_DIR=${HTTPD_SERVER_ROOT}/ssl.d;
typeset -rx HTTPD_CONFIG_PATH=${HTTPD_SERVER_ROOT}/conf;
typeset -rx HTTPD_SERVER_CONFIG=wserver.conf;
typeset -rx HTTPD_OWNING_USER=webadm;
typeset -rx HTTPD_PROCESS_USER=webusr;
typeset -rx HTTPD_OWNING_GROUP=webgrp;
typeset -rx HTTPD_INIT_SCRIPT=/etc/init.d/httpdsrvrmgr;
typeset -rx HTTPD_WEB_IDENTIFIER=WS;
typeset -rx HTTPD_PID_IDENTIFIER=PidFile;
typeset -rx HTTPD_USER_BIN_PATH=/opt/home/${HTTPD_PROCESS_USER}/bin;

#==============================================================================
# Template locations
#==============================================================================
typeset -rx SSL_TEMPLATE_FILE=${TEMPLATE_DIRECTORY}/${HTTPD_TYPE_IDENTIFIER}/wserver.conf_ssl;
typeset -rx NONSSL_TEMPLATE_FILE==${TEMPLATE_DIRECTORY}/${HTTPD_TYPE_IDENTIFIER}/wserver.conf_nonssl;
typeset -rx COMBINED_TEMPLATE_FILE=${TEMPLATE_DIRECTORY}/${HTTPD_TYPE_IDENTIFIER}/wserver.conf_both;

#==============================================================================
# HTTPD sudo rules
#==============================================================================
typeset -rx SUDO_START_WEBS="sudo -u ${HTTPD_PROCESS_USER} ${HTTPD_USER_BIN_PATH}/httpd -d ${HTTPD_SERVER_ROOT} -D %INSTANCE_NAME% -k start";
typeset -rx SUDO_STOP_WEBS="sudo -u ${HTTPD_PROCESS_USER} ${HTTPD_USER_BIN_PATH}/httpd -d ${HTTPD_SERVER_ROOT} -D %INSTANCE_NAME% -k stop";
