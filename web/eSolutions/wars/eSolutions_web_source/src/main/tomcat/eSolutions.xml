<?xml version="1.0" encoding="UTF-8"?>
<Context cookies="true" crossContext="false" docBase="${catalina.home}/installedApps/eSolutions_web_source-1.0.war"
    fireRequestListenersOnForwards="true" logEffectiveWebXml="false" override="false" path="/esolutions"
    preemptiveAuthentication="true" privileged="false" reloadable="true" sendRedirectBody="true"
    sessionCookieDomain="127.0.0.1" sessionCookieName="ESOLUTIONS_ID" sessionCookiePath="/"
    sessionCookiePathUsesTrailingSlash="true" swallowAbortedUploads="true" swallowOutput="true"
    tldNamespaceAware="true" tldValidation="true" useHttpOnly="true" xmlNamespaceAware="true" xmlValidation="true"
    addWebInfClassResources="false" allowLinking="false" antiJARLocking="true" antiResourceLocking="true"
    cacheMaxSize="10240" cacheObjectMaxSize="1024" cacheTTL="30000" cachingAllowed="true"
    jndiExceptionOnFailedWrite="true" processTlds="true" useNaming="true" secure="true">

    <Resource name="jdbc/esolutionssvc" auth="Container" type="javax.sql.DataSource"
        username="appuser" password="appuser10" driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://127.0.0.1/esolutionssvc?autoReconnect=true&amp;zeroDateTimeBehavior=convertToNull"
        testWhileIdle="true" testOnBorrow="true" testOnReturn="false"
        validationQuery="SELECT 1 FROM DUAL" validationInterval="30000"
        timeBetweenEvictionRunsMillis="5000" maxActive="100" minIdle="10"
        maxWait="10000" initialSize="10" removeAbandonedTimeout="60"
        removeAbandoned="true" logAbandoned="true" minEvictableIdleTimeMillis="30000"
        jdbcInterceptors="org.apache.tomcat.jdbc.pool.interceptor.ConnectionState;
            org.apache.tomcat.jdbc.pool.interceptor.StatementFinalizer;
            org.apache.tomcat.jdbc.pool.interceptor.SlowQueryReportJmx(threshold=10000)" />

    <Resource name="jdbc/cwssec" auth="Container" type="javax.sql.DataSource"
        username="appuser" password="appuser10" driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://127.0.0.1/cwssec?autoReconnect=true&amp;zeroDateTimeBehavior=convertToNull"
        testWhileIdle="true" testOnBorrow="true" testOnReturn="false"
        validationQuery="SELECT 1 FROM DUAL" validationInterval="30000"
        timeBetweenEvictionRunsMillis="5000" maxActive="100" minIdle="10"
        maxWait="10000" initialSize="10" removeAbandonedTimeout="60"
        removeAbandoned="true" logAbandoned="true" minEvictableIdleTimeMillis="30000"
        jdbcInterceptors="org.apache.tomcat.jdbc.pool.interceptor.ConnectionState;
            org.apache.tomcat.jdbc.pool.interceptor.StatementFinalizer;
            org.apache.tomcat.jdbc.pool.interceptor.SlowQueryReportJmx(threshold=10000)" />

    <Resource name="jms/mqConnectionFactory" auth="Container" type="org.apache.activemq.ActiveMQConnectionFactory"
        factory="org.apache.activemq.jndi.JNDIReferenceFactory" brokerURL="tcp://localhost:61616" />

    <Resource name="jms/requestQueue" auth="Container" type="org.apache.activemq.command.ActiveMQQueue"
        factory="org.apache.activemq.jndi.JNDIReferenceFactory" physicalName="CWS.REQUEST.QUEUE"/>

    <Resource name="jms/responseQueue" auth="Container" type="org.apache.activemq.command.ActiveMQQueue"
        factory="org.apache.activemq.jndi.JNDIReferenceFactory" physicalName="CWS.RESPONSE.QUEUE"/>
</Context>
