<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="@drawable/logo">
    <TextView
        android:id = "@+id/tvRequestName"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignBaseline = "@+id/etRequestValue"
        android:layout_alignBottom = "@+id/etRequestValue" />
    <TextView
        android:id = "@+id/tvOtpName"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignBaseline = "@+id/etOtpValue"
        android:layout_alignBottom = "@+id/etOtpValue"
        android:layout_alignParentLeft = "true"
        android:text = "@string/tvOtpPassword"
        android:visibility = "invisible" />
    <EditText
        android:inputType="text"
        android:hint="@string/hintPassword"
        android:id = "@+id/etRequestValue"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentRight = "true"
        android:ems = "10" />
    <EditText
        android:id = "@+id/etOtpValue"
        android:inputType = "textPassword"
        android:hint = "@string/hintPassword"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentRight = "true"
        android:layout_marginTop = "44dp"
        android:ems = "10"
        android:visibility = "invisible" />
    <Button
        android:id = "@+id/btnDoLogin"
        android:layout_width = "125dp"
        android:layout_height = "40dp"
        android:layout_alignLeft = "@+id/etOtpValue"
        android:layout_below = "@+id/etOtpValue"
        android:layout_marginTop = "27dp"
        android:text = "@string/btnDoLogin"
        android:background="@drawable/button"
        android:onClick="executeUserLogin" />
    <TextView
        android:id = "@+id/tvResponseValue"
        android:layout_width = "wrap_content"
        android:layout_height = "200dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_below = "@+id/btnDoLogin"
        android:layout_marginTop = "18dp" />
</RelativeLayout>
