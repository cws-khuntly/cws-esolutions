<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="@drawable/logo">
    <EditText
        android:inputType = "text"
        android:hint = "@string/tvHostHint"
        android:id = "@+id/et_HostName"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentRight = "true"
        android:ems = "10"/>
    <EditText
        android:inputType = "text"
        android:hint = "@string/tvServerHint"
        android:id = "@+id/et_DNSServer"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentRight = "true"
        android:layout_marginTop = "44dp"
        android:ems = "10"/>
    <TextView
        android:id = "@+id/tvHostname"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignBaseline = "@+id/et_DNSServer"
        android:layout_alignBottom = "@+id/et_DNSServer"
        android:text = "@string/tvHostName"/>
    <TextView
        android:id = "@+id/tvDNSServer"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignBaseline = "@+id/et_HostName"
        android:layout_alignBottom = "@+id/et_HostName"
        android:layout_alignParentLeft = "true"
        android:text = "@string/tvDNSServer"/>
    <Button
        android:id = "@+id/btnDoLookup"
        android:layout_width = "125dp"
        android:layout_height = "40dp"
        android:layout_alignLeft = "@+id/et_DNSServer"
        android:layout_below = "@+id/et_DNSServer"
        android:layout_marginTop = "27dp"
        android:text = "@string/btnDoLookup"
        android:background="@drawable/button"
        android:onClick = "executeDnsLookup" />
    <TextView
        android:id="@+id/tvResponseList"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/btnDoLookup"
        android:layout_marginTop="22dp" />
</RelativeLayout>
