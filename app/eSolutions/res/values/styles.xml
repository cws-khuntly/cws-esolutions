<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="global" parent="@android:style/Theme.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:ems">10</item>
    </style>

    <style name="textView" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:ems">10</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="errorText" parent="@style/textView">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="linkText" parent="@style/textView">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="editText" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/curvedbox</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:ems">10</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">@string/btnSubmit</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:ems">10</item>
    </style>
</resources>

