        <auth-data key="PASSWORD">userPassword</auth-data>
        <auth-data key="USER_ROLE">cwsrole</auth-data>
        <auth-data key="LOCK_COUNTER">cwsfailedpwdcount</auth-data>
        <auth-data key="LAST_LOGIN">cwslastlogin</auth-data>
        <auth-data key="SURNAME">sn</auth-data>
        <auth-data key="GIVEN_NAME">givenName</auth-data>
        <auth-data key="EXPIRY_DATE">cwsexpirydate</auth-data>
        <auth-data key="SEC_QUESTION_ONE">cwssecq1</auth-data>
        <auth-data key="SEC_QUESTION_TWO">cwssecq2</auth-data>
        <auth-data key="SEC_ANS_ONE">cwssecans1</auth-data>
