<?xml version="1.0" encoding="UTF-8"?>
<config>
    <security-config>
        <security-config key="authRepo">LDAP</security-config>
        <security-config key="useTwoFactor">false</security-config>
        <security-config key="maxAttempts">3</security-config>
        <security-config key="sessionTimeout">900000</security-config>
        <security-config key="timeoutWarning">840000</security-config>
        <security-config key="concurrentLogons">false</security-config>
        <security-config key="passwordExpiration">90</security-config>
        <security-config key="passwordMinLength">6</security-config>
        <security-config key="passwordMaxLength">30</security-config>
        <security-config key="allowUserReset">true</security-config>
        <security-config key="authAlgorithm">MD5</security-config>
        <security-config key="permSuspendLockCount">999</security-config>
        <security-config key="useSecurityManager">true</security-config>
        <security-config key="saltLength">8</security-config>
        <security-config key="authHandler">com.cws.esolutions.core.security.usermgmt.impl.LDAPAuthenticator</security-config>
    </security-config>

    <key-config>
        <key-config key="KeyManager">com.cws.esolutions.core.security.keymgmt.impl.FileKeyManager</key-config>
        <key-config key="KeyDirectory">/var/tmp/keys/</key-config>
        <key-config key="KeySize">4096</key-config>
    </key-config>

    <security-roles>
        <role key="SERVICE_SVCADMIN_ROLE">ServiceAdmin</role>
        <role key="SERVICE_USERADMIN_ROLE">UserAdmin</role>
        <role key="SERVICE_ADMIN_ROLE">Admin</role>
        <role key="SERVICE_USER_ROLE">User</role>
        <role key="SITE_ADMIN_ROLE">SiteAdmin</role>
    </security-roles>

    <auth-data>
