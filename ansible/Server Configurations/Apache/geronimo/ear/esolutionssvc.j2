<?xml version="1.0" encoding="UTF-8"?>
<connector xmlns="http://geronimo.apache.org/xml/ns/j2ee/connector-1.2">
    <dep:environment xmlns:dep="http://geronimo.apache.org/xml/ns/deployment-1.2">
        <dep:moduleId>
            <dep:groupId>console.dbpool</dep:groupId>
            <dep:artifactId>jdbc_esolutionssvc</dep:artifactId>
            <dep:version>1.0</dep:version>
            <dep:type>car</dep:type>
        </dep:moduleId>
        <dep:dependencies>
            <dep:dependency>
                <dep:groupId>mysql</dep:groupId>
                <dep:artifactId>mysql-connector-java</dep:artifactId>
                <dep:version>5.1.26</dep:version>
                <dep:type>jar</dep:type>
            </dep:dependency>
        </dep:dependencies>
    </dep:environment>
    <resourceadapter>
        <outbound-resourceadapter>
            <connection-definition>
                <connectionfactory-interface>javax.sql.DataSource</connectionfactory-interface>
                <connectiondefinition-instance>
                    <name>jdbc/esolutionssvc</name>
                    <config-property-setting name="DatabaseName">esolutionssvc</config-property-setting>
                    <config-property-setting name="UserName">{{ sqlUserName }}</config-property-setting>
                    <config-property-setting name="Password">{{ sqlUserPassword }}</config-property-setting>
                    <config-property-setting name="ServerName">{{ sqlHostName }}</config-property-setting>
                    <config-property-setting name="PortNumber">{{ sqlPortNumber }}</config-property-setting>
                    <config-property-setting name="useSSL">true</config-property-setting>
                    <config-property-setting name="requireSSL">true</config-property-setting>
                    <config-property-setting name="verifyServerCertificate">true</config-property-setting>
                    <config-property-setting name="useConfigs">maxPerformance</config-property-setting>
                    <config-property-setting name="ConnectTimeout">10000</config-property-setting>
                    <config-property-setting name="SocketTimeout">10000</config-property-setting>
                    <config-property-setting name="ZeroDateTimeBehavior">convertToNull</config-property-setting>
                    <config-property-setting name="InitialTimeout">10000</config-property-setting>
                    <config-property-setting name="AutoReconnectForPools">true</config-property-setting>
                    <config-property-setting name="MaxReconnects">3</config-property-setting>
                    <config-property-setting name="Encoding">UTF-8</config-property-setting>
                    <config-property-setting name="LoginTimeout">10000</config-property-setting>
                    <connectionmanager>
                        <local-transaction/>
                        <single-pool>
                            <max-size>10</max-size>
                            <min-size>0</min-size>
                            <match-one/>
                        </single-pool>
                    </connectionmanager>
                </connectiondefinition-instance>
            </connection-definition>
        </outbound-resourceadapter>
    </resourceadapter>
</connector>
