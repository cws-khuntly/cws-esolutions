<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <security-config>
        <email-address>secadm@caspersbox.com</email-address>
        <otpVariance />
        <maxAttempts />
        <iterations />
        <passwordExpiration />
        <passwordMinLength />
        <passwordMaxLength />
        <authAlgorithm />
        <otpAlgorithm />
        <saltLength>64</saltLength> <!-- salt string length (bigger is better) -->
        <performAudit>true</performAudit> <!-- should we audit stuff ? (default true) -->
        <resetIdLength />
        <smsResetEnabled />
        <smsCodeLength />
        <resetTimeout />
        <authConfig>/opt/cws/eSolutions/etc/repository.properties</authConfig>
        <authManager />
        <userManager>com.cws.esolutions.security.dao.usermgmt.impl.LDAPUserManager</userManager>
    </security-config>

    <!-- this should correlate back to the data obtained from -->
    <!-- the authentication repository. the objects below -->
    <!-- are the *minimum* required to populate the user object -->
    <repositoryConfiguration>
        <baseObjectClass>inetOrgPerson</baseObjectClass>
        <repositoryBaseDN>dc=caspersbox,dc=com</repositoryBaseDN>
        <repositoryUserBase>organizationalUnitName=Users,organizationName=CWS US</repositoryUserBase>
        <repositoryRoleBase>organizationalUnitName=Groups,organizationName=CWS US</repositoryRoleBase>
        <userReturningAttributes>
            <commonName>cn</commonName>
            <userId>userPrincipalName</userId>
            <surname>sn</surname>
            <givenName>givenName</givenName>
            <emailAddr>mail</emailAddr>
            <displayName>displayName</displayName>
            <telephoneNumber>telephoneNumber</telephoneNumber>
            <returningAttributes>
                <attributeName>cn</attributeName>
                <attributeName>userPrincipalName</attributeName>
                <attributeName>sn</attributeName>
                <attributeName>givenName</attributeName>
                <attributeName>mail</attributeName>
                <attributeName>displayName</attributeName>
                <attributeName>telephoneNumber</attributeName>
            </returningAttributes>
        </userReturningAttributes>

        <securityReturningAttributes />
    </repositoryConfiguration>

    <!-- only required if file-based signing is used. the keys arent used for anything else. -->
    <key-config />

    <!-- only required if file-based signing is used. if this is configured then key-config MUST be configured. -->
    <file-security-config />

    <exception-config />
</configuration>
